<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ConfigurationActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_shared_prefs"
        android:id="@+id/button_reset"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bluetooth_setup"
        android:id="@+id/button_AddBLEinfo"
        android:layout_below="@+id/button_reset"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AT"
        android:id="@+id/button_AT_SEND"
        android:layout_below="@+id/button_AddBLEinfo"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_new_rule"
        android:id="@+id/button_NEW_RULE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Paired with:"
        android:id="@+id/textView5"
        android:layout_below="@+id/button_reset"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/editText_phone_contact"
        android:layout_alignBottom="@+id/button_AddBLEinfo" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/grid_RULES_LAYOUT"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_AT_SEND"
        android:layout_above="@+id/button_NEW_RULE" />


</RelativeLayout>
